
import java.util.Scanner;

public class TEST08_PhoneBook {
	TEST08_Phone[] phone_arr;
	int member;
	Scanner sc;
	
	
	//생성자
	public TEST08_PhoneBook() {
		sc = new Scanner(System.in);
		
		
	}
	
	public void input(){
		System.out.print("인원수>>");
		int member = sc.nextInt();
		for(int i=0;i<member; i++) {
			System.out.print("이름과 전화번호(이름과 번호는 빈 칸없이 입력)>>");
			String name = sc.next();
			String tel = sc.next();
			phone_arr[i].getName(name);
			phone_arr[i].getTel(tel);
		}
		
		System.out.println("저장되었습니다...");
	}
	
	public void search(){
		int count = 0;
		System.out.print("검색할 이름>>");
		String inName = sc.next();
		for(int i=0; i<phone_arr.length; i++) {
			if(inName.equals(phone_arr[i].name)) {
				count++; i++;
			System.out.println(inName + "의 번호는 " + phone_arr[i].tel + "입니다.");	
			}
			else if(inName.equals("그만"))
				break;
			else
				i++;
		}
		
		if (count == 0)
			System.out.println(inName + "이 없습니다.");
	}
	
	public void run() {
		input();
		search();
	}
	
}
