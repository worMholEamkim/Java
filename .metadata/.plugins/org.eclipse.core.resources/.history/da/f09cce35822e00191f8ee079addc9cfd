import java.awt.Color;
import java.awt.Container;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;

public class TE03 extends JFrame {

	public TE03() {
		setTitle("Ten Color Button Frame");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		GridLayout grid = new GridLayout(1, 10);
		grid.setVgap(1);
		
		Container c = getContentPane();
		JButton [] btn = new JButton[10];
		for(int i=0; i<10; i++){
			btn[i] = new JButton("i");
		}
		
		c.setLayout(grid);
		
		
		btn[0].setBackground(Color.RED);
		btn[1].add(new JButton("1"));
		btn[1].setBackground(Color.RED);
		btn[2].add(new JButton("2"));
		btn[2].setBackground(Color.RED);
		btn[3].add(new JButton("3"));
		btn[3].setBackground(Color.RED);
		btn[4].add(new JButton("4"));
		btn[4].setBackground(Color.RED);
		btn[5].add(new JButton("5"));
		btn[5].setBackground(Color.RED);
		btn[6].add(new JButton("6"));
		btn[6].setBackground(Color.RED);
		btn[7].add(new JButton("7"));
		btn[7].setBackground(Color.RED);
		btn[8].add(new JButton("8"));
		btn[8].setBackground(Color.RED);
		btn[9].add(new JButton("9"));
		btn[9].setBackground(Color.RED);
		
		setSize(500,200);
		setVisible(true);
		
		
	}
	
	public static void main(String[] args) {
		new TE03();
	}

}
