import java.util.Scanner;
public class TEST10_Dictionary {
	
	private static String [] kor = {"사랑", "아기", "돈", "미래", "희망"};
	private static String [] eng = {"love", "baby", "money", "future", "hope"};
	public static String kor2Eng() {
		Scanner sc = new Scanner(System.in);
		System.out.println("한영 단어 검색 프로그램 입니다.");
		
		while (true) {
		System.out.print("한글단어? ");
		String inKor = sc.next();
		for(int i=0; i<eng.length; i++)
			if(inKor.equals(kor[i]))
				System.out.println(kor[i] + "은 " + eng[i]);
			else if(inKor.equals("그만"))
				break;
			else
				System.out.println("아가는 저의 사전에 없습니다.");
				
	}
	
}
}